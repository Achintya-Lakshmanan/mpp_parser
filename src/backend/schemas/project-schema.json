{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProjectData",
  "type": "object",
  "properties": {
    "properties": {
      "type": "object",
      "required": ["name", "startDate", "finishDate"],
      "properties": {
        "name": { "type": "string" },
        "startDate": { "type": "string" },
        "finishDate": { "type": "string" }
      }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": ["integer", "string"] },
          "name": { "type": "string" }
        }
      }
    }
  },
  "required": ["properties", "tasks"]
}
