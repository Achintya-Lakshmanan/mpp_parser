{
  "rewrites": [
    { "source": "/api/**", "destination": "http://localhost:3001/api/:splat" },
    { "source": "/**", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "**",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    }
  ]
} 