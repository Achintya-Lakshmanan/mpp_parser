run = "bash run.sh"
hidden = [".git", "node_modules", ".config"]
modules = ["nodejs-18", "web", "bash"]

[nix]
channel = "stable-24_05"

[env]
XDG_CONFIG_HOME = "/home/runner/.config"

[deployment]
run = ["sh", "-c", "bash run.sh"]
deploymentTarget = "cloudrun"
ignorePorts = false 

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 44521
externalPort = 3000
